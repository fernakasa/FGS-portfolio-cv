---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
export interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="Portfolio personal de Fernando Gustavo Sanchez - Desarrollador GIS & Fullstack"
    />
    <title>{title}</title>
    <link rel="icon" href="/favicon.ico" />
  </head>

  <body class="bg-slate-950 text-gray-100 font-sans antialiased">
    <!-- ðŸŽ¨ Fondo decorativo -->
    <div class="relative min-h-screen w-full bg-slate-950">
      <div
        class="absolute inset-0 bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#4f4f4f2e_1px,transparent_1px)] bg-[size:14px_24px] [mask-image:radial-gradient(ellipse_60%_50%_at_50%_0%,#000_70%,transparent_100%)] pointer-events-none z-0"
      >
      </div>

      <!-- ðŸ§­ Header separado -->
      <Header />

      <!-- ðŸ§± Contenido principal -->
      <main class="relative z-10 max-w-5xl mx-auto px-4 pt-28 pb-12">
        <slot />
      </main>

      <!-- ðŸ§¾ Footer -->
      <Footer />
    </div>
  </body>
</html>
