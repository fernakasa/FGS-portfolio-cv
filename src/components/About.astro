---
import about from "../data/about.json";
---

<div class="flex flex-wrap justify-center gap-8">
  <div class="max-w-xl">
    <h2 class="text-2xl font-bold mb-1">{about.name}</h2>
    <p class="leading-relaxed text-gray-200 whitespace-pre-line pt-2">
      {about.description}
    </p>
  </div>
  <div class="w-1/4 h-1/4 items-center hidden md:block">
    <img
      src={about.photo}
      alt={`Foto de ${about.name}`}
      class="rounded-xl object-cover rotate-2 border-4 border-gray-800 shadow-lg"
    />
  </div>
</div>
