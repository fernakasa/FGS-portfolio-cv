---
import welcome from "../data/welcome.json";
---

<div class="flex flex-wrap justify-center gap-8">
  <img
    src={welcome.photo}
    alt={`Foto de ${welcome.name}`}
    class="w-36 h-36 rounded-full object-cover border-4 border-gray-800 shadow-lg"
  />
  <div class="max-w-xl">
    <h2 class="text-2xl font-bold mb-1">{welcome.title}</h2>
    <p class="text-md text-gray-400 mb-2">
      {welcome.working}
    </p>
    <p class="leading-relaxed text-gray-200">
      {welcome.description}
    </p>
  </div>
</div>
