---
import education from "../data/education.json";
---

<div>
  <h2 class="text-xl font-semibold mb-4">Education</h2>
  <ul class="space-y-6">
    {
      education.map((item) => (
        <li class="bg-slate-800/60 p-5 rounded-lg border border-slate-700 shadow hover:bg-slate-800 transition">
          <h3 class="text-lg font-bold text-white">{item.degree}</h3>
          <p class="text-sm text-gray-400">
            {item.institution} · {item.location}
          </p>
          <p class="text-xs text-gray-500 mb-2">
            {item.start} · {item.end}
          </p>
          <p class="text-gray-300 whitespace-pre-line">{item.description}</p>
        </li>
      ))
    }
  </ul>
</div>
