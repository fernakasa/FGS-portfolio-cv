---
import projects from "../data/projects.json";
---

<div>
  <h2 class="text-xl font-semibold mb-4">Proyectos destacados</h2>
  <div class="grid gap-6">
    {
      projects.map((proyecto) => (
        <article class="bg-slate-800/60 p-5 rounded-lg shadow border border-slate-700 hover:bg-slate-800 transition">
          <h3 class="text-lg font-bold text-white mb-1">{proyecto.titulo}</h3>
          <p class="text-gray-300 mb-2">{proyecto.descripcion}</p>
          <p class="text-sm text-gray-400 mb-2">
            <strong>Tecnologías:</strong> {proyecto.tecnologias.join(", ")}
          </p>
          {proyecto.url && (
            <a
              href={proyecto.url}
              target="_blank"
              class="inline-block mt-2 text-sm text-blue-400 hover:underline"
            >
              Ver más →
            </a>
          )}
        </article>
      ))
    }
  </div>
</div>
