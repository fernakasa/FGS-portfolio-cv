---
import skills from "../data/skills.json";
---

<div>
  <h2 class="text-3xl font-semibold mb-8 text-left pl-16">ğŸ› ï¸ Habilidades</h2>

  <!-- Grid fluido -->
  <div
    class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 xl:grid-cols-4 gap-6"
  >
    {
      skills.map((group) => (
        <div class="bg-gray-800 rounded-xl p-4 shadow border-4 border-gray-700">
          <h3 class="text-sm font-semibold text-center text-yellow-400 mb-3">
            {group.category}
          </h3>
          <div class="flex flex-wrap gap-2">
            {group.skills.map((skill) => (
              <img
                src={skill.badge}
                alt={skill.name}
                title={skill.name}
                class="h-6"
                loading="lazy"
              />
            ))}
          </div>
        </div>
      ))
    }
  </div>
</div>
